# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=python25
pkgver=2.5.5
pkgrel=1
pkgdesc="A high-level scripting language"
arch=(i686 x86_64)
license=('custom')
url="http://www.python.org"
depends=('bzip2' 'gdbm' 'openssl' 'zlib' 'gcc-libs' 'readline')
makedepends=('tk')
optdepends=('db>=4.5')
source=(http://www.python.org/ftp/python/$pkgver/Python-$pkgver.tar.bz2 
	)
options=('!makeflags')
md5sums=('1d00e2fb19418e486c30b850df625aa3')




build() {

  cd $startdir/src/Python-$pkgver
  ./configure --prefix=/usr --enable-shared --with-threads --enable-unicode
  make || return 1
  make DESTDIR=$startdir/pkg altinstall
  #rm $startdir/pkg/usr/bin/python
  #rm $startdir/pkg/usr/bin/python-config

  # Rename all the scripts
  pushd $startdir/pkg/usr/bin
  mv idle idle2.5
  mv pydoc pydoc2.5
  mv smtpd.py smtpd2.5.py
  popd

  # license
  install -D -m644 LICENSE ${startdir}/pkg/usr/share/licenses/${pkgname}/LICENSE
  #mv $startdir/pkg/usr/share/man/man1/python.1 $startdir/pkg/usr/share/man/man1/python25.1
}
